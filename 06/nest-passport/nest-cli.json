{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "**/*.html.tpl",
        "outDir": "dist/src/"
      },
      {
        "include": "../client/",
        "outDir": "dist/client/"
      }
    ],
    "watchAssets": true
  }
}
